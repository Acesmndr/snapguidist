{
  "name": "snapguidist",
  "version": "0.1.0",
  "description": "Snapshot testing for React Styleguidist",
  "repository": "https://github.com/MicheleBertoli/snapguidist.git",
  "bin": "./bin/snapguidist.js",
  "files": [
    "bin",
    "dist",
    "src/server"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint --ignore-path .gitignore ./",
    "build:components": "babel ./src/client --out-dir ./dist",
    "build:styles": "cssnano ./src/client/styles.css ./dist/styles.css",
    "build": "yarn run build:components && yarn run build:styles",
    "prepublish": "yarn run build",
    "dev": "node ./src/server"
  },
  "authors": [
    "Michele Bertoli",
    "Matteo Ronchi"
  ],
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "cssnano-cli": "^1.0.5",
    "eslint": "^3.12.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "fs-extra": "^1.0.0",
    "jest": "^17.0.3",
    "supertest": "^2.0.1",
    "supertest-as-promised": "^4.0.2"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "cors": "^2.8.1",
    "express": "^4.14.0",
    "jest-snapshot": "^17.0.3",
    "react-test-renderer": "^15.4.1"
  },
  "peerDependencies": {
    "react-styleguidist": "^4.4.1"
  }
}
